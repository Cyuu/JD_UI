        <shape>
            <solid android:color="#ffffe381" />
            <stroke android:width="1.0dip" android:color="#ffcccccc" />
            <corners android:radius="5.0dip" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape>
            <solid android:color="#ffffe381" />
            <stroke android:width="1.0dip" android:color="#ffcccccc" />
